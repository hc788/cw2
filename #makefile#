CXX = g++
CXXFLAGS = -Wall -Wextra -Wpedantic

track: code.cpp Vehicle.o Motorcycle.o Car.o Van.o
	$(CXX) $(CXXFLAGS) -o $@ $^

Vehicle.o: Vehicle.cpp Vehicle.h
	$(CXX) $(CXXFLAGS) -c $<
	
Car.o: Car.cpp Car.h
	$(CXX) $(CXXFLAGS) -c $<
	
Motorcycle.o: Motorcycle.cpp Motorcycle.h
	$(CXX) $(CXXFLAGS) -c $<
	
Van.o: Van.cpp Van.h
	$(CXX) $(CXXFLAGS) -c $<



.PHONY: clean

clean:
	$(RM)  *.o converter
